@model StaffAdminProfileVM;

@{
    ViewBag.Title = User.IsInRole("Staff")
        ? "Account | Staff Profile"
        : "Account | Admin Profile";
}

<div asp-validation-summary="All" class="validation-summary"></div>

<!-- Main content (Profile Page) -->
<form action="" method="POST" enctype="multipart/form-data" class="right_container collapsed" id="right_container">
    <!-- Admin Profile Page Layout -->
    <div class="profile-page">
        <!-- Left Side: Profile Picture and Signup Date -->
        <div class="profile-info">
            <div class="signup-date">@Model.Id</div>
            <div class="profile_img_user_container">
                <label class="upload">
                    <input asp-for="Photo" accept="image/jpeg,image/png" hidden>
                    <img src="/photo/users/@Model.PhotoURL" alt="userPhoto" class="profile_img_user">
                    <span class="errorMessage" asp-validation-for="Photo"></span>
                </label>
            </div>
            <div class="status @Model.Status">
                <span class="rounded_status"></span>
                <span class="status-text">@Model.Status</span>
                <!-- <span class="status-text inactive">Inactive</span> Uncomment this line if you want to show "Inactive" instead -->
            </div>
        </div>

        <!-- Right Side: Profile Form (Username, Name, Contact, Email, Account Status, etc.) -->
        <div class="profile-form">
            <div>
                <div class="grid">
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" data-upper autofocus>
                        <span class="errorMessage" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" data-upper>
                        <span class="errorMessage" asp-validation-for="LastName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Age"></label>
                        @Model.Age
                    </div>
                    <div class="form-group">
                        <label asp-for="IcNo"></label>
                        @Model.IcNo
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender"></label>
                        <select asp-for="Gender">
                            <option value="">Select Gender</option>
                            <option value="M">Male</option>
                            <option value="F">Female</option>
                        </select>
                        <span class="errorMessage" asp-validation-for="Gender"></span>
                    </div>
                  
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        @Model.Email
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNo"></label>
                        <input asp-for="PhoneNo" data-digit>
                        <span class="errorMessage" asp-validation-for="PhoneNo"></span>
                    </div>
                </div>
                <div class="action-buttons">
                    <a href="/Account/UpdatePassword" class="btn-disable-enable">Change Password</a>
                    <button type="submit" class="btn-save-changes">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>