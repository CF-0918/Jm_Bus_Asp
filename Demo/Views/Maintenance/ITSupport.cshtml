@model ITSupportVM;
@{
    ViewBag.Title = "Maintenance | IT Support";
}

<div class="container">
    <div class="support-ticket-container">
        <h2 class="text-center mb-4"><i class="fas fa-headset support-icon"></i>Technical Support Ticket</h2>
        <form id="support-form" method="post">
            <div class="mb-3">
                <label asp-for="Priority" class="form-label"></label>
                <select  asp-for="Priority" class="form-select" >
                    <option value="">Select Priority</option>
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                </select>
                <span class="errorMessage" asp-validation-for="Priority"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DNS" class="form-label"></label>
                <input type="text" asp-for="DNS" class="form-control" >
                <span class="errorMessage" asp-validation-for="DNS"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" ></textarea>
                <span class="errorMessage" asp-validation-for="Description"></span>
            </div>

            <div class="price-info">
                <p>Price: <span class="text-danger fw-bold">RM 10 per ticket</span>. The price will be deducted from your hosting service.</p>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">Submit</button>
                <button type="reset" class="btn btn-danger">Reset</button>
            </div>
        </form>
    </div>
  </div>