        display: flex;
        flex-direction: column; /* Stack the content vertically */
        justify-content: center; /* Center the content */
        align-items: center; /* Center align the content */
        height: 200px; /* Set a fixed height for all boxes */
    }

        .status-box p {
            display: block; /* Ensures each <p> is displayed on a new line */
            margin: 0; /* Removes default margin */
        }

        .status-box .seat-count {
            font-size: 30px; /* Optional: Adjust the font size for the seat count */
        }

        .status-box:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
        }

    /* Styling for the booked-seats section */
    .seat-status .status-box .booked-seats {
        display: flex;
        flex-direction: column; /* Stack text and number vertically */
        align-items: center; /* Center align the text and number */
    }

        .seat-status .status-box .booked-seats #bookedSeatsCounter {
            font-size: 24px; /* Adjust the size as needed */
            font-weight: bold;
            margin-top: 5px; /* Space between text and number */
        }

    /* Additional custom styling for other classes */
    .most-popular-route .status-box {
        background: linear-gradient(45deg, #28a745, #218838); /* Green gradient */
        color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        font-size: 18px;
        font-weight: bold;
