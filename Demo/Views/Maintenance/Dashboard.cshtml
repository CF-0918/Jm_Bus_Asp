    const fourStarCounterElement = document.getElementById('fourStarCounter');

    let fourStarCurrentCount = 0;
    const fourStarAnimationSpeed = 40;

    function animateFourStarCounter() {
        if (fourStarCurrentCount < fourStarCount) {
            fourStarCurrentCount++;
            fourStarCounterElement.textContent = fourStarCurrentCount;
            setTimeout(animateFourStarCounter, fourStarAnimationSpeed);
        } else {
            fourStarCounterElement.textContent = fourStarCount;
        }
    }

    animateFourStarCounter();

    // Three Star Counter
    const threeStarCount = @Html.Raw(Json.Serialize(ViewBag.ThreeStarCount ?? 0));
    const threeStarCounterElement = document.getElementById('threeStarCounter');

    let threeStarCurrentCount = 0;
    const threeStarAnimationSpeed = 40;

    function animateThreeStarCounter() {
        if (threeStarCurrentCount < threeStarCount) {
            threeStarCurrentCount++;
            threeStarCounterElement.textContent = threeStarCurrentCount;
            setTimeout(animateThreeStarCounter, threeStarAnimationSpeed);
        } else {
            threeStarCounterElement.textContent = threeStarCount;
        }
    }

    animateThreeStarCounter();

    // Two Star Counter
    const twoStarCount = @Html.Raw(Json.Serialize(ViewBag.TwoStarCount ?? 0));
    const twoStarCounterElement = document.getElementById('twoStarCounter');

    let twoStarCurrentCount = 0;
