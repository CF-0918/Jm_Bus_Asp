<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Booked Seats Counter
        const bookedSeats = @Html.Raw(Json.Serialize(ViewBag.BookedSeats ?? 0)); // Fetch the booked seats count
        const bookedSeatsCounterElement = document.getElementById('bookedSeatsCounter');

        let bookedSeatsCurrentCount = 0; // Start count at 0 for booked seats
        const bookedSeatsAnimationSpeed = 40; // Adjust for faster or slower increment (lower = faster)

        function animateBookedSeatsCounter() {
            if (bookedSeatsCurrentCount < bookedSeats) {
                bookedSeatsCurrentCount++;
                bookedSeatsCounterElement.textContent = bookedSeatsCurrentCount;
                setTimeout(animateBookedSeatsCounter, bookedSeatsAnimationSpeed);
            } else {
                bookedSeatsCounterElement.textContent = bookedSeats; // Ensure the final count matches exactly
            }
        }

        animateBookedSeatsCounter(); // Start the booked seats animation

    // Popular Route Counter
