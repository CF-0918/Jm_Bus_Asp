<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Booked Seats Counter
        const bookedSeats = @Html.Raw(Json.Serialize(ViewBag.BookedSeats ?? 0)); // Fetch the booked seats count
        const bookedSeatsCounterElement = document.getElementById('bookedSeatsCounter');

        let bookedSeatsCurrentCount = 0; // Start count at 0 for booked seats
        const bookedSeatsAnimationSpeed = 40; // Adjust for faster or slower increment (lower = faster)

        function animateBookedSeatsCounter() {
            if (bookedSeatsCurrentCount < bookedSeats) {
                bookedSeatsCurrentCount++;
                bookedSeatsCounterElement.textContent = bookedSeatsCurrentCount;
                setTimeout(animateBookedSeatsCounter, bookedSeatsAnimationSpeed);
            } else {
                bookedSeatsCounterElement.textContent = bookedSeats; // Ensure the final count matches exactly
            }
        }

        animateBookedSeatsCounter(); // Start the booked seats animation

    // Popular Route Counter
    const popularRouteCount = @Html.Raw(Json.Serialize(ViewBag.PopularRouteCount ?? 0)); // Fetch the popular route bookings count
    const popularRouteCounterElement = document.getElementById('popularRouteCounter');

    let popularRouteCurrentCount = 0; // Start count at 0 for popular route
    const popularRouteAnimationSpeed = 40; // Adjust for faster or slower increment (lower = faster)

    function animatePopularRouteCounter() {
        if (popularRouteCurrentCount < popularRouteCount) {
            popularRouteCurrentCount++;
            popularRouteCounterElement.textContent = popularRouteCurrentCount;
            setTimeout(animatePopularRouteCounter, popularRouteAnimationSpeed);
        } else {
            popularRouteCounterElement.textContent = popularRouteCount; // Ensure the final count matches exactly
        }
    }

    // Start the popular route animation
    animatePopularRouteCounter();

    // Active Member Counter
    const activeMemberCount = @Html.Raw(Json.Serialize(ViewBag.ActiveMembers ?? 0)); // Fetch the active members count
    const activeMemberCounterElement = document.getElementById('activeMemberCounter');

    let activeMemberCurrentCount = 0; // Start count at 0 for active members
    const activeMemberAnimationSpeed = 40; // Adjust for faster or slower increment (lower = faster)

    function animateActiveMemberCounter() {
        if (activeMemberCurrentCount < activeMemberCount) {
            activeMemberCurrentCount++;
            activeMemberCounterElement.textContent = activeMemberCurrentCount;
            setTimeout(animateActiveMemberCounter, activeMemberAnimationSpeed);
        } else {
            activeMemberCounterElement.textContent = activeMemberCount; // Ensure the final count matches exactly
        }
    }

    // Start the active member animation
    animateActiveMemberCounter();

    });

</script>
