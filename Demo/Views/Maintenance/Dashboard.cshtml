            oneStarCounterElement.textContent = oneStarCurrentCount;
            setTimeout(animateOneStarCounter, oneStarAnimationSpeed);
        } else {
            oneStarCounterElement.textContent = oneStarCount;
        }
    }

    animateOneStarCounter();


    });

