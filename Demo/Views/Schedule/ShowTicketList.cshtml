@{
    ViewBag.Title = "Maintenance | Ticket List";
}

<div class="container">
    <form data-ajax="true"
          data-ajax-update="#target"
          data-ajax-loading="#loader"
          id="f">
        <div class="form-group">
            <label for="name">Passenger Name:</label>
            <input type="text" name="name" id="name" value="@ViewBag.Name" class="form-control" autofocus />
        </div>

        <div class="filter-group">
            <label for="status">Status:</label>
            <select name="status" class="filter_status form-control" id="status">
                <option value="All" selected="@(ViewBag.Status == "All")">All</option>
                <option value="Booked" selected="@(ViewBag.Status == "Booked")">Booked</option>
                <option value="Cancelled" selected="@(ViewBag.Status == "Cancelled")">Cancelled</option>
                <option value="Completed" selected="@(ViewBag.Status == "Completed")">Completed</option>
            </select>
        </div>
        <button class="btn btn-primary">Search</button>
        <img src="/images/loader.gif" id="loader" style="display: none">
    </form>

    <div id="target">
        <partial name="_TicketList">
    </div>

    @section foot {
        <script>
            let timer = null;

            // Focus at the end of the input field after page load
            document.addEventListener('DOMContentLoaded', function () {
                var input = document.getElementById('name');
                if (input) {
                    input.setSelectionRange(input.value.length, input.value.length);
                    input.focus();
                }
            });

            // Handle input event for the search field
            $('#name').on('input', function (e) {
                clearTimeout(timer);
                timer = setTimeout(function () {
                    $(e.target.form).submit();
                }, 500);
            });

            // Check/Uncheck All functionality
            document.addEventListener('DOMContentLoaded', function () {
                document.body.addEventListener('click', function (event) {
                    if (event.target.getAttribute('data-check') === 'ids') {
                        document.querySelectorAll('input[name="ids"]').forEach(function (checkbox) {
                            checkbox.checked = true;
                        });
                    }
                    if (event.target.getAttribute('data-uncheck') === 'ids') {
                        document.querySelectorAll('input[name="ids"]').forEach(function (checkbox) {
                            checkbox.checked = false;
                        });
                    }
                });
            });

            // Handle ticket status changes
            document.addEventListener('DOMContentLoaded', function () {
                document.body.addEventListener('change', function (event) {
                    if (event.target && event.target.classList.contains('status-dropdown')) {
                        const ticketId = event.target.getAttribute('data-ticket-id');
                        const newStatus = event.target.value;

                        if (confirm('Are you sure you want to change the ticket status?')) {
                            fetch(`/Ticket/UpdateTicketStatus/${ticketId}`, {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ status: newStatus })
                            })
                            .then(response => {
                                if (response.ok) {
                                    alert('Ticket status updated successfully.');
                                    location.reload();
                                } else {
                                    alert('Failed to update ticket status.');
                                }
                            })
                            .catch(error => console.error('Error:', error));
                        } else {
                            event.target.value = event.target.querySelector('option[selected]').value;
                        }
                    }
                });
            });

            // Status filter dropdown change handler
            document.addEventListener("DOMContentLoaded", function () {
                const statusDropdown = document.getElementById("status");
                statusDropdown.addEventListener("change", function () {
                    this.form.submit();
                });
            });

            // Reattach event listeners after AJAX updates
            $(document).ajaxComplete(function() {
                attachEventListeners();
            });
        </script>
    }
</div>