@model EditRankVM;

@{
    ViewBag.Title = "Membership | Edit Rank";
}

<h2 class="text-center">Edit Rank <i class="fas fa-trophy"></i></h2>
<div class="back-button-container">
    <a href="@Url.Action("ShowRankList", "Membership")" class="back-button">
        <i class="fas fa-arrow-left"></i> Back to Rank List
    </a>
</div>

<form method="post" class="container" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="validation-summary"></div>

    <div class="form-row">
        <div class="form-group col">
            <label asp-for="Name"></label>
            <input asp-for="Name" data-upper autofocus>
            <span class="errorMessage" asp-validation-for="Name"></span>
        </div>

        <div class="form-group col">
            <label asp-for="MinSpend"></label>
            <input type="number" asp-for="MinSpend" />
            <span class="errorMessage" asp-validation-for="MinSpend"></span>
        </div>

        <div class="form-group col">
            <label asp-for="Discounts"></label>
            <input type="number" asp-for="Discounts">
            <span class="errorMessage" asp-validation-for="Discounts"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col">
            <label asp-for="Description"></label>
            <textarea class="form-control" asp-for="Description"></textarea>
            <span class="errorMessage" asp-validation-for="Description"></span>
        </div>
    </div>

    <!-- Submit Button -->
    <div class="form-row">
        <div class="form-group col">
            <button type="submit" class="btn btn-primary">Edit Rank <i class="fas fa-trophy"></i></button>
        </div>
    </div>
</form>

