<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-2 fw-bold">User</div>
        <div class="col-6">
            <input type="text" id="userInput" class="form-control" placeholder="Enter your name" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2 fw-bold">Message</div>
        <div class="col-6">
            <input type="text" id="messageInput" class="form-control" placeholder="Type your message" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-8 text-end">
            <button id="sendButton" class="btn btn-primary">Send Message</button>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div id="chatBox" class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                <ul id="messagesList" class="list-unstyled"></ul>
            </div>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
